<div class="container">
  <div class="row">
    <div class="col-md-8">
      <%= image_tag(@portfolio_item.data[:image], :class => "img-responsive")%>
    </div>

    <div class="col-md-4">
      <p><%= @portfolio_item.render({layout: false})%></p>
    </div>
  </div>

  <div class="row">

    <div class="col-lg-12">
      <h3 class="page-header">Andere projecten</h3>
    </div>
    
    <% @other_projects.each do |project| %>
      <div class="col-sm-3 col-xs-6">
        <a href="<%=project.url%>">
          <%= image_tag(project.data[:image], :class => "img-responsive portfolio-item")%>
        </a>
      </div>
    <% end %>
    <div class="col-sm-3 col-xs-6">
        <a href="/portfolio">
          <%= image_tag("alle-projecten.png", :class => "img-responsive portfolio-item")%>
        </a>
    </div>
  </div>
</div>
